    <view class="eva_btm">
      <view style="padding: 14rpx;">
        <text>商品评分</text>
        <view class="stars">
          <mp-icon icon="star" size="{{20}}" type="field" color="{{starColor}}" bindtap="changeColor"></mp-icon>
          <mp-icon icon="star" size="{{20}}" type="field" color="orange"></mp-icon>
        </view>
      </view>

      <view style="padding: 14rpx;">
        <text>物流服务</text>
        <view class="stars">
          <mp-icon icon="star" size="{{20}}" type="field" color="orange"></mp-icon>
        </view>
      </view>
    </view>

  </view>
  <button type="" class="my_btn">提交评价</button>
</view>
