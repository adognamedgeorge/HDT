/* pages/goodsInfo/goods/goods.wxss */
.wrap {
  margin-bottom: 16rpx;
  background-color: #ffffff;
}

.swiper_content {
  width: 100%;
  height: 100%;
}

.goods_title {
  padding: 0 32rpx;
  color: #333333;
}

.sec_title {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 80%;
}

.my_price {
  padding: 16rpx 0 18rpx 0;
  color: #E02020;
  font-size: 56rpx;
  font-weight: bold;
}

.del_price {
  text-decoration: line-through;
  color: #B2B3B5;
  font-size: 20rpx;
  margin-left: 4rpx;
}

.flex, .flex_wrap, .flex_btm, .flex_contact {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.flex {
  width: 100%;
  flex-wrap: wrap;
  padding-bottom: 200rpx;
  justify-content: center;
}

.flex_wrap {
  margin-bottom: 30rpx;
}

.flex_content {
  background-color: #ffffff;
  width: 40%;
  font-size: 24rpx;
  color: #333333;
  padding: 24rpx;
  margin: 8rpx 7rpx;
}

.item_name {
  width: 94%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding: 10rpx 0;
}

.item_title {
  padding-bottom: 24rpx; 
  display: block; 
  width: 90%; 
  overflow: hidden;
  text-overflow: ellipsis; 
  white-space: nowrap;
  font-size: 28rpx;
}

.buy_now {
  background-color: #E42A2A; 
  padding: 12rpx; 
  border-radius: 24rpx; 
  font-size: 20rpx; 
  color: #ffffff;
}

.btn_contact {
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
  justify-content: center !important;
  background-color: inherit !important;
}

.flex_contact {
  width: 90%;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #ffffff;
  padding: 14rpx 32rpx;
}

.btm_cart {
  width: 40rpx; 
  height: 40rpx; 
  display: block; 
  margin: 0 auto;
}

.cart_badge {
  position: absolute; 
  right: 24rpx; 
  top: -24rpx;
}

.btm_btn {
  margin: 0 15rpx; 
  border-radius: 48rpx;
  font-size: 32rpx;
  color: #ffffff;
  background-color: #E2D0CE;
}

.my_warn {
  background-image: linear-gradient(99deg, #FC3A3A 0%, #E12828 97%);
}

.dialog {
  background: white; 
  position: fixed; 
  bottom: 0; 
  left: 0; 
  width: 92%;
  z-index: 999;
  overflow: auto;
  padding: 32rpx;
}

.dialog_btn {
  background-image: linear-gradient(99deg, #FC3A3A 0%, #E12828 97%);
  color: #ffffff;
  border-radius: 200rpx;
  width: 90% !important;
  margin-bottom: 20rpx;
}

.mask {
  background:black; 
  opacity: .5; 
  position: fixed; 
  top: 0; 
  left: 0; 
  width: 100%; 
  height: 100%; 
  z-index: 666;
}

.dialog_img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.rt_title {
  color: #333333;
  font-size: 34rpx;
  max-height: 96rpx;
  overflow: hidden;
  padding: 5rpx;
}

.del_price {
  color: #999999;
  font-size: 20rpx;
  text-decoration: line-through;
}

.num {
  width: 161rpx;
  height: 48rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-radius: 3rpx;
  border: 1px solid #EFEFEF;
}

.my_num {
  border-left: 1px solid #EFEFEF;
  border-right: 1px solid #EFEFEF;
  text-align: center;
  width: 40%;
}

.rt_btm {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dialog_content {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.my_detailname {
  padding: 28rpx 0 16rpx 0;
  font-size: 32rpx;
  width: 96%;
  white-space: normal;
  word-break: break-all;
  font-weight: bold;
}

.weui-cells__title {
  padding: 30rpx 24rpx;
  font-size: 28rpx;
  color: #2D313A;
  margin-top: 0;
}

.my_cells {
  color: #FD7035;
  font-size: 28rpx;
}

.my_icon {
  width: 32rpx;
  height: 32rpx;
  margin-bottom: -7rpx;
  margin-right: 10rpx;
}

.to_cart {
  position: relative; 
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  display:flex;
  align-items:center;
}