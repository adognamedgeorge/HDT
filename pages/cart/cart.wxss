/* pages/cart/cart.wxss */
.page {
  background-color: #EEEEEE;
  padding: 20rpx;
}

.check_box {
  width: 94%;
  padding: 20rpx;
  border-radius: 40rpx;
  background-color: #ffffff;
  margin: 20rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 200rpx;
}

.rt_btm {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.box_rt {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.img_lf {
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
}

.content_rt {
  flex: 1;
  margin-left: 20rpx;
  height: 200rpx;
  padding: 15rpx;
}

.rt_top {
  position: relative;
}

.top_title {
  font-size: 30rpx; 
  height: 100rpx; 
  line-height: 50rpx; 
  overflow: hidden; 
  width: 90%;
}

.top_icon {
  width: 45rpx; 
  height: 45rpx; 
  position: absolute; 
  right: -5rpx; 
  top: 0;
}

.my_check {
  padding: 0 !important;
}

.all_check {
  display: flex;
  justify-content: space-between;
  background-color: #ffffff;
  width: 100%;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
}

.all_rt {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx;
}

.all_total {
  color: red;
  margin-right: 20rpx;
}