/* pages/mall/sets/sets.wxss */
.page {
  padding: 18rpx;
}

.wrap {
  border-radius: 12rpx;
  padding: 28rpx 14rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4px 15px 0 rgba(108,130,190,0.16);
}

.title, .bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0;
}

.title_lf {
  color: #333333;
  font-size: 36rpx;
}

.title_rt {
  background-image: linear-gradient(223deg, #FF4900 0%, #FF5500 100%);
  color: #ffffff;
  border-radius: 50%;
  font-size: 20rpx;
  width: 52rpx;
  height: 52rpx;
  line-height: 26rpx;
  text-align: center;
  padding: 16rpx;
}

.content_flex {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  flex-wrap: wrap;
}

.content {
  width: 30%;
  margin-bottom: 13rpx;
}

.content_img {
  height: 161rpx;
  border-radius: 8rpx;
  width: 100%;
}

.my_price {
  text-align: center;
  font-size: 26rpx;
  color: #666666;
}

.bottom_lf {
  font-size: 28rpx;
  color: #333333;
}

.bottom_rt {
  border-radius: 32rpx;
  background-color: #CE4031;
  color: #ffffff;
  font-size: 28rpx;
  padding: 12rpx 26rpx;
}

.price_del {
  text-decoration: line-through;
  color: grey;
}