<!--pages/mine/myAddress/addAddress/addAddress.wxml-->
<view>
  <form>
    <view>
      <input name="input1" placeholder="收货人" />
    </view>
    <view>
      <input name="input2" placeholder="手机号码" />
    </view>
    <view>
      <picker mode="region" value="{{region}}" custom-item="{{customItem}}" bindchange="bindRegionChange">
        <view>
          所在地区: {{region[0]}},{{region[1]}},{{region[2]}}
        </view>
      </picker>
    </view>
    <textarea value="" placeholder="详细地址：如道路、门牌号、小区、楼栋号、单元室等"></textarea>
    <view>
      <text>设为默认地址</text>
      <switch checked></switch>
    </view>
  </form>
  <button type="primary">保存</button>
</view>
