.img-box {
  margin: 200rpx auto 0;
  width: 120rpx;
  height: 120rpx;
}

.img {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
.name {
  color: #333333;
  font-weight: bold;
  font-size: 32rpx;
  text-align: center;
  margin: 40rpx 0;
}
.ps {
  color: #999;
  font-size: 24rpx;
  text-align: center;
  margin-bottom: 160rpx;
}

.btn {
  height: 84rpx;
  border-radius: 6rpx;
  font-size: 28rpx;
  width: 82%;
  text-align: center;
  background: #DBA871;
  color: #fff;
  margin: 0 auto;
}

.icon {
  vertical-align: middle;
  height: 36rpx;
  width: 36rpx;
}