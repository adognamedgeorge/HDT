/* pages/customer/customer.wxss */
.box::after {
  content: '';
  background-color: rgb(0,0,0,.4);
  width: 100%;
  height: 100%;
  position: absolute;
}

.content {
  background-color: #ffffff;
  border: 1px solid lightgrey;
  width: 600rpx;
  height: 800rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -400rpx 0 0 -300rpx;
  z-index: 999;
  border-radius: 20rpx;
}