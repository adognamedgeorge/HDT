<!--pages/mall/sorts/sorts.wxml-->
<view class="page">
  <view class="title">
    <text>全部商品</text>
    <mp-icon icon="arrow" size="{{10}}" color="#BEC2CB"></mp-icon>
  </view>

  <view wx:for="{{sortsData}}" wx:key="index" wx:for-item="itemName">
    <view class="title">
      <text>{{itemName.title}}</text>
      <view class="check_all">
        <text style="margin-right: 15rpx;">查看全部</text>
        <mp-icon icon="arrow" size="{{10}}"></mp-icon>
      </view>
    </view>
    <view class="content_flex">
      <view class="content" wx:for="{{itemName.content}}" wx:key="index">{{item}}</view>
    </view>
  </view>
</view>
