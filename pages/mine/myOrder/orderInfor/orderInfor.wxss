/* pages/mine/myOrder/orderInfor/orderInfor.wxss */
.page {
  color: #333333;
  font-size: 28rpx;
}

.infor_top {
  height: 194rpx;
  width: 100%;
  display: flex;
  align-items: center;
  color: #FFFFFF;
  position: relative;
  overflow: hidden;
}

.infor_content {
  position: absolute;
  z-index: 999;
  margin-left: 32rpx;
}

.infor_img {
  width: 100%;
  height: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
}

.buyer {
  padding: 36rpx 32rpx;
  color: #2D313A;
  font-size: 32rpx;
  border-bottom: 16rpx solid #F5F5F5;
}

.buyer_add {
  color: #868A92;
  font-size: 24rpx;
}

.my_cell {
  font-size: 32rpx;
  border-bottom: 1px solid #F6F6F7;
}

.goods_wrap {
  border-bottom: 16rpx solid #F5F5F5;
}

.goods {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 32rpx;
  border-top: 1px solid #F5F5F5;
}

.img_lf {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.content_rt {
  width: 60%;
}

.rt_top {
  font-size: 34rpx;
}

.rt_top, .rt_btm {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sec_title {
  font-size: 24rpx; 
  color: #999999; 
  margin: 16rpx 0 46rpx 0;
}

.top_title {
  width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.my_btn {
  padding: 12rpx 44rpx;
  border: 1px solid #CBCED5;
  border-radius: 44rpx;
  margin: 0;
}

.my_cells {
  border-bottom: 16rpx solid #F5F5F5;
  font-size: 28rpx;
}

.my_btn {
  border: 1px solid #BEC2CB;
  border-radius: 40rpx;
  padding: 10rpx 16rpx;
  margin-right: 20rpx;
  font-size: 24rpx !important;
}

.btm_btn {
  color: #E02020;
}

.btn_box {
  display: flex; 
  justify-content: flex-end;
  align-items: center;
  padding-top: 20rpx;
}
.content_btm {
  padding: 18rpx 30rpx;
}
.btm_price {
  text-align: right;
}

.pay {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 2rpx;
  font-size: 28rpx;
  color: #FF3C3C;
}

.weui-dialog {
  width: 90% !important;
}