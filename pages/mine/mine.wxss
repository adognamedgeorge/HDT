/* pages/mine/mine.wxss */
.userinfo, .user_photo {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.userinfo {
  padding: 20rpx 30rpx;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.myBuy {
  border-bottom: 20rpx solid #e6e6e6;
}

.buy_title, .weui-cells__title {
  padding: 34rpx 34rpx;
  font-size: 32rpx;
  color: #2D313A;
  margin: 0;
}

.buy_content {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-bottom: 20rpx;
}

.my_cells {
  border-bottom: 20rpx solid #e6e6e6;
  color: #2D313A;
  font-size: 32rpx;
}

.img1 {
  width: 64rpx;
  height: 64rpx;
  display: block;
  margin: 0 auto;
}

.img1_title {
  font-size: 36rpx;
  color: #333333;
}

.cell_img {
  width: 34rpx;
  height: 34rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.weui-cell__ft {
  font-size: 24rpx;
}

.photo_rt {
  flex: 1;
  text-align: right;
}