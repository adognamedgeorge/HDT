/* pages/mall/mall.wxss */
.page {
  padding: 0 26rpx;
  background-color: #F6F6F7;
}

.top {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
  margin: 0 -26rpx;
  height: 116rpx;
  line-height: 116rpx;
}

.top_lf {
  position: relative;
  flex: .9;
}

.lf_input {
  background-color: #F5F6F7;
  border-radius: 36rpx;
  padding: 16rpx 24rpx;
  font-size: 30rpx;
}

.lf_img {
  position: absolute;
  top: -20rpx;
  right: 30rpx;
}

.top_rt {
  width: 28rpx;
  height: 28rpx;
  color: #666666;
  margin-right: 26rpx;
}

.rt_img {
  width: 28rpx;
  height: 28rpx;
  display: block;
}

.swiper_box {
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6px 7px 0 rgba(113,113,113,0.50);
  height: 352rpx;
}

.my_swiper {
  height: 352rpx;
}

.swiper_item, .swiper_img {
  width: 100%;
  height: 100%;
}

.coupon {
  width: 100%;
  height: 198rpx;
  background-color: #dbdbdb;
  border-radius: 5rpx;
  margin-top: 36rpx;
}

.my_goods_swiper {
  height: 400rpx;
}

.goods {
  margin-bottom: 40rpx;
  border-top: 22rpx solid #F6F6F7;
  background-color: #ffffff;
}

.goods_title {
  margin: 24rpx 0 34rpx 0;
  padding: 0 26rpx;
  font-size: 36rpx;
  color: #333333;
}

.flex_box {
  display: flex;
  justify-content: space-around;
  width: 100%;
  flex-wrap: wrap;
  align-items: center;
  padding: 20rpx 0;
}

.flex_content {
  width: 19%;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.img_box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.flex_img {
  width: 100%;
  height: 100%;
}

.package_wrap {
  padding-bottom: 24rpx;
}

.package_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
  padding: 18rpx 26rpx;
}

.package_title_rt {
  font-size: 24rpx;
  color: #868A92;
}

.wrap_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 20rpx 32rpx 46rpx;
  font-size: 32rpx;
  color: #2D313A;
}

.wrap_title_rt {
  color: #F00707;
  font-size: 36rpx;
}

.rt_text {
  font-size: 24rpx;
}

.wrap_content {
  width: 94%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  background-color: #F7F7F7;
  margin: 0 auto;
}

.content_imgBox {
  width: 47%;
  height: 232rpx;
  overflow: hidden;
  padding: 12rpx 0;
  border-radius: 8rpx;
}

.content_img {
  width: 100%;
  height: 100%;
}

.recommend_title, .recommend_content {
  display: flex;
  align-items: center;
}

.recommend_title {
  justify-content: space-between;
  font-size: 36rpx;
  padding: 32rpx 18rpx;
  color: #333333;
  border-top: 24rpx solid #F6F6F7;
}

.retitle_rt {
  font-size: 24rpx;
  color: #868A92;
}

.recommend_content {
  justify-content: flex-start;
  width: 100%;
  flex-wrap: wrap;
}

.recontent_box {
  width: 33%;
  height: 300rpx;
  margin-bottom: 17rpx;
}

.recontent_img {
  width: 211rpx;
  height: 211rpx;
  display: block;
  margin: 0 auto;
  border-radius: 8rpx;
}

.recontent_text {
  overflow: hidden;
  width: 100%;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  color: #333333;
  text-align: left;
}

.re_price {
  color: #FF3B30 ;
  font-size: 36rpx;
}